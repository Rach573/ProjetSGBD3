# Database Configuration
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://root:CHANGER_MOT_DE_PASSE@localhost:3306/snowdispatcher"

# Alternative format with password
# DATABASE_URL="mysql://root:your_password@localhost:3306/snowdispatcher"

# Gmail API configuration (needed to enable Gmail sync)
# You must create OAuth2 credentials (Desktop app) and generate a refresh token.
GMAIL_CLIENT_ID="CHANGER_CLIENT_ID"
GMAIL_CLIENT_SECRET="CHANGER_CLIENT_SECRET"
GMAIL_REDIRECT_URI="http://localhost:3000/oauth2callback"
GMAIL_REFRESH_TOKEN="CHANGER_REFRESH_TOKEN"
# Optional: leave empty to use the authenticated user
GMAIL_USER_EMAIL="CHANGER_EMAIL"
# Optional label filter (e.g. "Label_1234567890")
GMAIL_LABEL_ID=""
# Optional Gmail search query. Defaults to "in:inbox is:unread"
GMAIL_QUERY=""
# Optional cap on emails fetched per sync (default 10)
GMAIL_MAX_RESULTS=""
